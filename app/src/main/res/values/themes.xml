<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.FleekCode" parent="Theme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/colorBackgroundLight</item>

        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryLight</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainerLight</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainerLight</item>
        <item name="colorSecondary">@color/colorSecondaryLight</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryLight</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainerLight</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondaryContainerLight</item>
        <item name="colorTertiary">@color/colorTertiaryLight</item>
        <item name="colorOnTertiary">@color/colorOnTertiaryLight</item>
        <item name="colorTertiaryContainer">@color/colorTertiaryContainerLight</item>
        <item name="colorOnTertiaryContainer">@color/colorOnTertiaryContainerLight</item>
        <item name="colorError">@color/colorErrorLight</item>
        <item name="colorOnError">@color/colorOnErrorLight</item>
        <item name="colorErrorContainer">@color/colorErrorContainerLight</item>
        <item name="colorOnErrorContainer">@color/colorOnErrorContainerLight</item>
        <item name="android:colorBackground">@color/colorBackgroundLight</item>
        <item name="colorOnBackground">@color/colorOnBackgroundLight</item>
        <item name="colorSurface">@color/colorSurfaceLight</item>
        <item name="colorOnSurface">@color/colorOnSurfaceLight</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariantLight</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariantLight</item>
        <item name="colorOutline">@color/colorOutlineLight</item>
        <item name="colorOutlineVariant">@color/colorOutlineVariantLight</item>
        <item name="colorSurfaceInverse">@color/colorInverseSurfaceLight</item>
        <item name="colorOnSurfaceInverse">@color/colorInverseOnSurfaceLight</item>
        <item name="colorPrimaryInverse">@color/colorInversePrimaryLight</item>
        <item name="colorPrimaryFixed">@color/colorPrimaryFixedLight</item>
        <item name="colorOnPrimaryFixed">@color/colorOnPrimaryFixedLight</item>
        <item name="colorPrimaryFixedDim">@color/colorPrimaryFixedDimLight</item>
        <item name="colorOnPrimaryFixedVariant">@color/colorOnPrimaryFixedVariantLight</item>
        <item name="colorSecondaryFixed">@color/colorSecondaryFixedLight</item>
        <item name="colorOnSecondaryFixed">@color/colorOnSecondaryFixedLight</item>
        <item name="colorSecondaryFixedDim">@color/colorSecondaryFixedDimLight</item>
        <item name="colorOnSecondaryFixedVariant">@color/colorOnSecondaryFixedVariantLight</item>
        <item name="colorTertiaryFixed">@color/colorTertiaryFixedLight</item>
        <item name="colorOnTertiaryFixed">@color/colorOnTertiaryFixedLight</item>
        <item name="colorTertiaryFixedDim">@color/colorTertiaryFixedDimLight</item>
        <item name="colorOnTertiaryFixedVariant">@color/colorOnTertiaryFixedVariantLight</item>
        <item name="colorSurfaceDim">@color/colorSurfaceDimLight</item>
        <item name="colorSurfaceBright">@color/colorSurfaceBrightLight</item>
        <item name="colorSurfaceContainerLowest">@color/colorSurfaceContainerLowestLight</item>
        <item name="colorSurfaceContainerLow">@color/colorSurfaceContainerLowLight</item>
        <item name="colorSurfaceContainer">@color/colorSurfaceContainerLight</item>
        <item name="colorSurfaceContainerHigh">@color/colorSurfaceContainerHighLight</item>
        <item name="colorSurfaceContainerHighest">@color/colorSurfaceContainerHighestLight</item>
    </style>

    <style name="Theme.FleekCode" parent="Base.Theme.FleekCode" />

    <style name="Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="elevationOverlayEnabled">false</item>

        <item name="textInputStyle">@style/textInput</item>
        <item name="materialButtonStyle">@style/button</item>
        <item name="bottomNavigationStyle">@style/bottomNavigationStyle</item>
        <item name="android:textAppearance">@style/textStyle</item>

        <item name="toolbarStyle">@style/toolbarStyle</item>
        <item name="materialAlertDialogTheme">@style/materialDialogTheme</item>
        <item name="alertDialogTheme">@style/alertDialogTheme</item>
        <item name="circularProgressIndicatorStyle">@style/progressBarStyle</item>
        <item name="floatingActionButtonStyle">@style/fabStyle</item>
        <item name="materialDividerStyle">@style/materialDivider</item>
    </style>
    
    <style name="materialDivider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerThickness">0.5dp</item>
    </style>

    <style name="dropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="materialThemeOverlay">@style/autoCompleteTextViewOverlay</item>
    </style>

    <style name="autoCompleteTextViewStyle" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:drawablePadding">-7.5dp</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="autoCompleteTextViewOverlay">
        <item name="autoCompleteTextViewStyle">@style/autoCompleteTextViewStyle</item>
    </style>

    <style name="fabStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="elevation">0dp</item>
    </style>

    <style name="iconClickableStyle">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="clickableStyle">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Preference.SwitchPreferenceCompat" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/material_switch</item>
    </style>
    
    <style name="progressBarStyle" parent="Widget.Material3.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="trackCornerRadius">10dp</item>
    </style>

    <style name="toolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/toolbarTitleStyle</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="titleStyle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toolbarTitleStyle" parent="@style/titleStyle">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="textStyle" parent="TextAppearance.MaterialComponents.Body1">

    </style>

    <style name="alertDialogTheme" parent="@style/materialDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/shape_corners</item>
    </style>

    <style name="materialDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="materialAlertDialogTitleTextStyle">@style/materialDialogTitleStyle</item>
        <item name="materialAlertDialogTitleIconStyle">@style/materialDialogTitleIconStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/materialDialogBodyTextStyle</item>
    </style>

    <style name="materialDialogBodyTextStyle" parent="MaterialAlertDialog.Material3.Body.Text.CenterStacked">

    </style>

    <style name="materialDialogTitleStyle" parent="MaterialAlertDialog.Material3.Title.Text.CenterStacked">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="materialDialogTitleIconStyle" parent="MaterialAlertDialog.Material3.Title.Icon.CenterStacked">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="bottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemPaddingTop">9dp</item>
        <item name="itemPaddingBottom">12dp</item>
        <item name="background">?attr/colorSurface</item>
    </style>

    <style name="button" parent="Widget.Material3.Button">
        <item name="cornerRadius">14dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="editText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:drawablePadding">-7.5dp</item>
    </style>

    <style name="textInputOverlay">
        <item name="editTextStyle">@style/editText</item>
    </style>

    <style name="textInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="singleLine">true</item>
        <item name="expandedHintEnabled">false</item>
        <item name="materialThemeOverlay">@style/textInputOverlay</item>
    </style>
</resources>